@page
@model Project001.Areas.Identity.Pages.Account.RegisterModel
@inject Microsoft.Extensions.Localization.IStringLocalizer<Project001.Resources.SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["Register"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-green-50 via-white to-emerald-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <!-- Header -->
        <div class="text-center">
            <div class="mx-auto h-16 w-16 bg-gradient-to-r from-green-600 to-emerald-600 rounded-full flex items-center justify-center mb-6 shadow-lg">
                <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
                </svg>
            </div>
            <h1 class="text-4xl font-bold text-gray-900 mb-2">@Localizer["CreateAccount"]</h1>
            <p class="text-gray-600">@Localizer["JoinOurMeetingRoomSystem"]</p>
        </div>

        <!-- Register Form -->
        <div class="bg-white py-8 px-6 shadow-xl rounded-2xl border border-gray-100">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="space-y-6">
                <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm bg-red-50 p-3 rounded-lg border border-red-200"></div>

                <!-- Name Fields Row -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <!-- First Name -->
                    <div>
                        <label asp-for="Input.FirstName" class="block text-sm font-semibold text-gray-700 mb-2">@Localizer["FirstName"]</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                                </svg>
                            </div>
                            <input asp-for="Input.FirstName" 
                                   class="block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-green-500 focus:border-transparent transition duration-200 ease-in-out placeholder-gray-400" 
                                   autocomplete="given-name" 
                                   aria-required="true" 
                                   placeholder="@Localizer["EnterFirstName"]" />
                        </div>
                        <span asp-validation-for="Input.FirstName" class="text-red-500 text-xs mt-1"></span>
                    </div>

                    <!-- Last Name -->
                    <div>
                        <label asp-for="Input.LastName" class="block text-sm font-semibold text-gray-700 mb-2">@Localizer["LastName"]</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                                </svg>
                            </div>
                            <input asp-for="Input.LastName" 
                                   class="block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-green-500 focus:border-transparent transition duration-200 ease-in-out placeholder-gray-400" 
                                   autocomplete="family-name" 
                                   aria-required="true" 
                                   placeholder="@Localizer["EnterLastName"]" />
                        </div>
                        <span asp-validation-for="Input.LastName" class="text-red-500 text-xs mt-1"></span>
                    </div>
                </div>

                <!-- Email Field -->
                <div>
                    <label asp-for="Input.Email" class="block text-sm font-semibold text-gray-700 mb-2">@Localizer["Email"]</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"/>
                            </svg>
                        </div>
                        <input asp-for="Input.Email" 
                               class="block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-green-500 focus:border-transparent transition duration-200 ease-in-out placeholder-gray-400" 
                               autocomplete="username" 
                               aria-required="true" 
                               placeholder="@Localizer["EnterYourEmail"]" />
                    </div>
                    <span asp-validation-for="Input.Email" class="text-red-500 text-xs mt-1"></span>
                </div>

                <!-- Department Field -->
                <div>
                    <label asp-for="Input.DepartmentId" class="block text-sm font-semibold text-gray-700 mb-2">@Localizer["Department"]</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-4m-5 0H9m0 0H7m2 0v-6a2 2 0 012-2h2a2 2 0 012 2v6m-6 0V9a2 2 0 012-2h2a2 2 0 012 2v6"/>
                            </svg>
                        </div>
                        <select asp-for="Input.DepartmentId" 
                                asp-items="Model.Departments"
                                class="block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-green-500 focus:border-transparent transition duration-200 ease-in-out bg-white">
                            <option value="">@Localizer["SelectDepartment"]</option>
                        </select>
                    </div>
                    <span asp-validation-for="Input.DepartmentId" class="text-red-500 text-xs mt-1"></span>
                </div>

                <!-- Password Fields -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <!-- Password -->
                    <div>
                        <label asp-for="Input.Password" class="block text-sm font-semibold text-gray-700 mb-2">@Localizer["Password"]</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                                </svg>
                            </div>
                            <input asp-for="Input.Password" 
                                   type="password"
                                   class="block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-green-500 focus:border-transparent transition duration-200 ease-in-out placeholder-gray-400" 
                                   autocomplete="new-password" 
                                   aria-required="true" 
                                   placeholder="@Localizer["EnterPassword"]" />
                        </div>
                        <span asp-validation-for="Input.Password" class="text-red-500 text-xs mt-1"></span>
                    </div>

                    <!-- Confirm Password -->
                    <div>
                        <label asp-for="Input.ConfirmPassword" class="block text-sm font-semibold text-gray-700 mb-2">@Localizer["ConfirmPassword"]</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                                </svg>
                            </div>
                            <input asp-for="Input.ConfirmPassword" 
                                   type="password"
                                   class="block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-green-500 focus:border-transparent transition duration-200 ease-in-out placeholder-gray-400" 
                                   autocomplete="new-password" 
                                   aria-required="true" 
                                   placeholder="@Localizer["ConfirmYourPassword"]" />
                        </div>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-red-500 text-xs mt-1"></span>
                    </div>
                </div>

                <!-- Password Requirements -->
                <div class="bg-gray-50 p-4 rounded-xl border border-gray-200">
                    <h4 class="text-sm font-semibold text-gray-700 mb-2">@Localizer["PasswordRequirements"]:</h4>
                    <ul class="text-xs text-gray-600 space-y-1">
                        <li class="flex items-center">
                            <svg class="h-3 w-3 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                            </svg>
                            @Localizer["AtLeast6Characters"]
                        </li>
                        <li class="flex items-center">
                            <svg class="h-3 w-3 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                            </svg>
                            @Localizer["OneUppercaseLetter"]
                        </li>
                        <li class="flex items-center">
                            <svg class="h-3 w-3 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                            </svg>
                            @Localizer["OneLowercaseLetter"]
                        </li>
                        <li class="flex items-center">
                            <svg class="h-3 w-3 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                            </svg>
                            @Localizer["OneDigit"]
                        </li>
                    </ul>
                </div>

                <!-- Submit Button -->
                <div>
                    <button type="submit" 
                            class="group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-semibold rounded-xl text-white bg-gradient-to-r from-green-600 to-emerald-600 hover:from-green-700 hover:to-emerald-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition duration-200 ease-in-out shadow-lg hover:shadow-xl transform hover:-translate-y-0.5">
                        <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                            <svg class="h-5 w-5 text-green-200 group-hover:text-green-100" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 12a2 2 0 100-4 2 2 0 000 4z"/>
                                <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"/>
                            </svg>
                        </span>
                        @Localizer["CreateAccount"]
                    </button>
                </div>

                <!-- External Registration Section -->
                @{
                    if ((Model.ExternalLogins?.Count ?? 0) > 0)
                    {
                        <div class="mt-6">
                            <div class="relative">
                                <div class="absolute inset-0 flex items-center">
                                    <div class="w-full border-t border-gray-300" />
                                </div>
                                <div class="relative flex justify-center text-sm">
                                    <span class="px-2 bg-white text-gray-500">@Localizer["OrRegisterWith"]</span>
                                </div>
                            </div>

                            <div class="mt-6 grid grid-cols-1 gap-3">
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                        <button type="submit" asp-route-provider="@provider.Name" 
                                                class="w-full inline-flex justify-center py-3 px-4 border border-gray-300 rounded-xl shadow-sm bg-white text-sm font-medium text-gray-500 hover:bg-gray-50 transition duration-200">
                                            @Localizer["SignUpWith"] @provider.DisplayName
                                        </button>
                                    </form>
                                }
                            </div>
                        </div>
                    }
                }
            </form>
        </div>

        <!-- Login Link -->
        <div class="text-center">
            <p class="text-sm text-gray-600">
                @Localizer["AlreadyHaveAccount"]
                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" 
                   class="font-semibold text-green-600 hover:text-green-500 transition duration-200">
                    @Localizer["SignInHere"]
                </a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}