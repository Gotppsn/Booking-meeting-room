@page
@model Project001.Areas.Identity.Pages.Account.LogoutModel
@{
    ViewData["Title"] = "Log out";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-gray-50 via-white to-gray-100 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div class="text-center">
            <div class="mx-auto h-16 w-16 bg-gradient-to-r from-gray-600 to-gray-700 rounded-full flex items-center justify-center mb-6 shadow-lg">
                <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
                </svg>
            </div>
            <h1 class="text-4xl font-bold text-gray-900 mb-2">You have been logged out</h1>
            <p class="text-gray-600">Thank you for using our meeting room system</p>
        </div>

        <div class="bg-white py-8 px-6 shadow-xl rounded-2xl border border-gray-100 text-center">
            <p class="text-gray-700 mb-6">You have successfully logged out of your account.</p>
            <a asp-page="./Login" class="w-full inline-flex justify-center py-3 px-4 border border-transparent text-sm font-semibold rounded-xl text-white bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-200 ease-in-out shadow-lg hover:shadow-xl transform hover:-translate-y-0.5">
                Sign in again
            </a>
        </div>
    </div>
</div>